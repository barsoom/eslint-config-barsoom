{
  "overrides": [
    {
      "files": [
        "**/*.test.{js,jsx,ts,tsx}",
        "**/__mocks__/*.{js,jsx,ts,tsx}"
      ],
      "extends": ["plugin:jest/recommended"],
      "env": {
        "jest": true,
        "jest/globals": true
      },
      "rules": {
        "jest/no-identical-title": "error",
        "jest/prefer-to-have-length": "warn",
        "jest/valid-expect": "error"
      }
    }
  ]
}
